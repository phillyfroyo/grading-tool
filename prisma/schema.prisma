generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model class_profiles {
  id           String   @id
  name         String
  cefrLevel    String
  vocabulary   String[]
  grammar      String[]
  prompt       String?
  created      DateTime @default(now())
  lastModified DateTime
  userId       String
  temperature  Float?   @default(0)
  users        users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model sessions {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model users {
  id             String           @id
  email          String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  class_profiles class_profiles[]
}
