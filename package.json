{
  "name": "grading-tool",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --config=jest.config.js",
    "test:frontend": "vitest run --config=vitest.config.js",
    "test:backend:watch": "cross-env NODE_ENV=test jest --config=jest.config.js --watch",
    "test:frontend:watch": "vitest --config=vitest.config.js",
    "test:frontend:ui": "vitest --ui --config=vitest.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage",
    "test:backend:coverage": "cross-env NODE_ENV=test jest --config=jest.config.js --coverage",
    "test:frontend:coverage": "vitest run --coverage --config=vitest.config.js",
    "test:all": "npm run test && npm run test:e2e",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "vite",
    "start": "node server.js",
    "build": "npx prisma generate && npx prisma migrate deploy && vite build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "postinstall": "npx prisma generate",
    "db:setup": "npx prisma migrate dev --name init && npx prisma generate && node scripts/migrate-profiles.js",
    "db:reset": "npx prisma migrate reset",
    "db:studio": "npx prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/express-session": "^1.18.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "morgan": "^1.10.1",
    "openai": "^5.19.1",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "c8": "^8.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsdom": "^23.0.1",
    "msw": "^2.0.8",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.32",
    "supertest": "^6.3.3",
    "terser": "^5.24.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.4"
  }
}
